!!! 5
html(lang='en')
  head
    title Steria Quiz
    meta(name='HandheldFriendly', content='True')
    meta(name='MobileOptimized', content='width')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
    meta(name='touch-event-mode', value='native')
    meta(name='cursor-event-mode', value='native')
    link(rel='stylesheet', href='/jquery-mobile/jquery.mobile-1.1.1.min.css', type='text/css')
    script(src='/jquery-1.8.1.min.js')
    script(src='/jquery-mobile/jquery.mobile-1.1.1.min.js')
    script(src='/quiz.js')
  body#quiz
    div(data-role='page')
      div(data-role='header')
        h1 Steria Quiz
      div(data-role='content')
        form(action='post', method='post', id='form', data-ajax='false')
          div(data-role='fieldcontain')
            fieldset(data-role='controlgroup', id='q1')
              legend Hva er 2+2?
              input(type='radio', name='toplussto', id='toplussto-1', value='1a', required)
              label(for='toplussto-1') 4
              input(type='radio', name='toplussto', id='toplussto-2', value='1b', required)
              label(for='toplussto-2') 42
              input(type='radio', name='toplussto', id='toplussto-3', value='1c', required)
              label(for='toplussto-3') Vet ikke
          div(data-role='fieldcontain')
            fieldset(data-role='controlgroup', id='q2')
              legend Hvem er bestest?
              input(type='radio', name='hvemerbest', id='hvemerbest-1', value='2a', required)
              label(for='hvemerbest-1') Apple
              input(type='radio', name='hvemerbest', id='hvemerbest-2', value='2b', required)
              label(for='hvemerbest-2') Samsung
              input(type='radio', name='hvemerbest', id='hvemerbest-3', value='2c', required)
              label(for='hvemerbest-3') Chuck
          div#details
            div(data-role='fieldcontain')
              label(for='name') Navn
              input(type='text', name='name', id='name', value='', required)
              label(for='phone') Telefon
              input(type='tel', name='phone', id='phone', value='', required)
              label(for='email') Elektrisk post
              input(type='email', name='email', id='email', value='', required)
            div(data-role='fieldcontain')
              label(for='submit') Ferdig?
              input(type='submit', name='submit', id='submit', value='Jeg vil vinne')
